---
import GitHub from "@/icons/Github.astro"
import Section from "../Section.astro"

import { projects } from "@cv"
---

<Section title="Projects">
  <ul>
    {
      projects.map(
        ({ url, description, highlights, name, isActive, github }) => {
          return (
            <li>
              <article>
                <header>
                  <h3>
                    <a
                      href={url}
                      title={`Ver el proyecto ${name}`}
                      target="_blank">
                      {name}
                    </a>
                    {isActive && <span>&bull;</span>}
                    {github && (
                      <a
                        class="github-code-link"
                        href={github}
                        target="_blank"
                        title={`Ver cÃ³digo fuente del proyecto ${name}`}>
                        <GitHub />
                      </a>
                    )}
                  </h3>
                  <p>{description}</p>
                </header>
                <footer>
                  {highlights.map((highlight) => (
                    <span>{highlight}</span>
                  ))}
                </footer>
              </article>
            </li>
          )
        }
      )
    }
  </ul>
</Section>

<style>
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
  }

  article {
    border-radius: 8px;
    border: 1px solid #85939e;
    gap: 16px;
    display: flex;
    flex-direction: column;
    padding: 16px;
    height: 100%;
  }

  article header {
    flex: 1;
  }

  article header h3 a {
    color: #b3c3d3;
  }

  article header h3 a:hover {
    text-decoration: underline;
  }

  article header h3 span {
    color: rgb(0, 255, 76);
  }

  article header p {
    font-size: 0.75rem;
    line-height: 1.2rem;
    margin-bottom: 4px;
  }

  article footer {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    font-size: 0.6rem;
  }

  article footer span {
    border-radius: 6px;
    background: #272c30;
    border: 1px solid #85939e;
    color: #85939e;
    font-size: 0.6rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
  }

  .github-code-link {
    margin-left: 5px;
  }

  @media (width <= 700px) {
    ul {
      margin-inline: 0px;
    }
  }

  @media print {
    article h3 span {
      animation-name: none;
    }
  }
</style>
